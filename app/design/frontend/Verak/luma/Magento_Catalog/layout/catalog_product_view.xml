<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="product.info.social" destination="product.info.main" after="page.main.title"/>
        <referenceContainer name="product.info.main">
            <container name="div.product.info.demo" htmlTag="div" htmlClass="message error"  before="product.info.details">
                <block class="Verak\Catalog\Block\Product\View\Demo"
                       name="product.info.demo"
                       before="-"
                       template="Verak_Catalog::product/view/demo.phtml"
                >
                    <arguments>
                        <argument name="string_variable" xsi:type="string">This is a demo product. You can add them to cart and place order only to test the Magento capabilities</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
